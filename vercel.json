{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "echo 'no build for serverless functions'",
  "outputDirectory": "public",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/api" },
    { "source": "/:path*", "destination": "/api/:path*" }
  ]
}
